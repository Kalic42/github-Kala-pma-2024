<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvNadpis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/myColor1"
        android:orientation="horizontal"
        android:textSize="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Jaké brusle si chcete objednat"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <RadioGroup
        android:id="@+id/rbBrusle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

    <RadioButton
        android:id="@+id/rbBrusle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supreme"
        android:textStyle="bold"
        android:textSize="20dp"
        android:checked="true"
        app:buttonTint="@color/myColor1"/>

    <RadioButton
        android:id="@+id/rbBrusle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vapor"
        android:textStyle="bold"
        android:textSize="20dp"
        android:checked="true"
        app:buttonTint="@color/myColor1"/>

    <RadioButton
        android:id="@+id/rbBrusle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nexus"
        android:textSize="20dp"
        android:textStyle="bold"
        android:checked="true"
        app:buttonTint="@color/myColor1"/>

</RadioGroup>

    <CheckBox
        android:id="@+id/cbNoze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karbonové nože"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:buttonTint="@color/myColor2"
        android:textStyle="normal"/>

    <CheckBox
        android:id="@+id/cbTkanicky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voskované tkaničky"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:buttonTint="@color/myColor2"
        android:textStyle="normal"/>

    <CheckBox
        android:id="@+id/cbChranice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chrániče na brusle"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:buttonTint="@color/myColor2"
        android:textStyle="normal"/>

    <Button
        android:id="@+id/btnObjednavka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/myColor1"
        android:text="Objednat brusle"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tvObjednavka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textStyle="italic"
        android:text="Souhrn objednávky: "
        android:paddingTop="15dp"
        android:paddingLeft="10dp"/>

    <ImageView
        android:id="@+id/ivBrusle"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerInside"
        android:src="@drawable/supreme" />


</LinearLayout>